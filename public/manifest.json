{
  "manifest_version": 3,
  "name": "React Extension",
  "version": "1.0.0",
  "description": "A browser extension built with React and TypeScript",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "activeTab"]
}
